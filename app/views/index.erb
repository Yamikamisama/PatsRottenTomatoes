	<%=erb :"filter/_filter_form"  %>
	<% @movies.each do |movie| %>
	<%=erb :"_modal", locals: {movie: movie} %>
	<div class="row text-center">

		<div class="col-md-3 col-sm-6 hero-feature">
			<div class="thumbnail">
				<img src="<%= movie.poster_thumbnail %>">
				<div class="caption">
					<h4><%= movie.title %></h4>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
					<p>
						<a data-toggle="modal" href="#myModal<%= movie.id %>"><h5>More Info</h5></a>
					</p>
				</div>
			</div>
		</div>

	</div>
	<% end %>

	<button>SHOW MORE</button>