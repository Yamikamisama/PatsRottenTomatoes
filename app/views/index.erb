	<%=erb :"filter/_filter_form"  %>
	<% @movies.each do |movie| %>
	<!-- Modal -->
	<div class="modal fade" id="myModal<%= movie.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					<h4 class="modal-title"><a class-"title" href="/movie/<%= movie.id %>"><%= movie.title %></a></h4>
				</div>
				<div class="modal-body">

					<p><img src="<%= movie.poster_thumbnail %>">
						<%= movie.title %>
						RELEASE DATE: <%= movie.release_date %>
						RATING: <%= movie.mpaa_rating%>
						RUNTIME: <%= movie.runtime %>
					</p>
					SYNOPSIS: <%= movie.synopsis %>
					CRITICS SCORE: <%= movie.critics_score %> AUDIENCE SCORE: <%= movie.audience_score %>
						<% if movie.favorite == true %>
						<form class="unfav" action="/<%=movie.id%>" method='POST'>
							<input type="hidden" name="_method" value="PUT">
							<input type="hidden" name="movie[favorite]" value="false">
							<button class="favorited_button" type="submit">Favorited</button>
						</form>
						<% else %>
						<form class="fav" action="/<%=movie.id%>" method='POST'>
							<input type="hidden" name="_method" value="PUT">
							<input type="hidden" name="movie[favorite]" value="true">
							<button  class="favorite_button" type="submit">Favorite</button>
						</form>
						<% end %>
					</p>

				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
	<!-- modal end -->
	<div class="row text-center">

		<div class="col-md-3 col-sm-6 hero-feature">
			<div class="thumbnail">
				<img src="<%= movie.poster_thumbnail %>">
				<div class="caption">
					<h3><%= movie.title %></h3>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
					<p>
						<a data-toggle="modal" href="#myModal<%= movie.id %>"><h3>More Info</h3></a>
					</p>
				</div>
			</div>
		</div>

	</div>
	<% end %>